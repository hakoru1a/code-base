{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information",
      "ApiGateway": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Services": {
    "TLBIOMASS": {
      "Url": "http://${SERVICES_TLBIOMASS_HOST}:${SERVICES_TLBIOMASS_PORT}",
      "Name": "TLBIOMASS API",
      "IncludeInSwagger": true,
      "IncludeInHealthChecks": true,
      "HealthCheckPath": "/health"
    }
  },
  "OAuth": {
    "Authority": "${OAUTH_AUTHORITY}",
    "ClientId": "${OAUTH_CLIENTID}",
    "ClientSecret": "${OAUTH_CLIENTSECRET}",
    "RedirectUri": "/auth/signin-oidc",
    "PostLogoutRedirectUri": "/",
    "Scopes": [
      "openid",
      "profile",
      "email"
    ],
    "ResponseType": "code",
    "UsePkce": true,
    "WebAppUrl": "${OAUTH_WEBAPPURL}",
    "SessionSlidingExpirationMinutes": 60,
    "SessionAbsoluteExpirationMinutes": 480,
    "TokenEndpoint": "${OAUTH_TOKENENDPOINT}",
    "AuthorizationEndpoint": "${OAUTH_AUTHORIZATIONENDPOINT}",
    "EndSessionEndpoint": "${OAUTH_ENDSESSIONENDPOINT}",
    "RefreshTokenBeforeExpirationSeconds": 60,
    "InstanceName": "ApiGateway_",
    "PkceExpirationMinutes": 10
  },
  "CacheSettings": {
    "ConnectionStrings": "${CACHE_CONNECTIONSTRING}",
    "Password": "${CACHE_PASSWORD}"
  },
  "Keycloak": {
    "Authority": "${KEYCLOAK_AUTHORITY}",
    "Realm": "${KEYCLOAK_REALM}",
    "ClientId": "${OAUTH_CLIENTID}",
    "ClientSecret": "${OAUTH_CLIENTSECRET}",
    "ValidateIssuer": "${KEYCLOAK_VALIDATEISSUER}",
    "ValidateAudience": "${KEYCLOAK_VALIDATEAUDIENCE}",
    "ValidateLifetime": "${KEYCLOAK_VALIDATELIFETIME}",
    "RequireHttpsMetadata": "${KEYCLOAK_REQUIREHTTPSMETADATA}",
    "RoleClaimType": "${KEYCLOAK_ROLECLAIMTYPE}",
    "UseResourceRoles": "${KEYCLOAK_USERESOURCEROLES}"
  },
  "ElasticConfiguration": {
    "Uri": "${ELASTIC_URI}",
    "Username": "${ELASTIC_USERNAME}",
    "Password": "${ELASTIC_PASSWORD}"
  }
}